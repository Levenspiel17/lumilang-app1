const CACHE_NAME = 'lumilang-v1.0.0';
const OFFLINE_URL = '/offline.html';

// ìºì‹œí•  í•µì‹¬ íŒŒì¼ ëª©ë¡
const CORE_ASSETS = [
  '/',
  '/index.html',
  '/offline.html',
  '/manifest.json',
  '/static/js/main.chunk.js',
  '/static/js/bundle.js',
  '/static/css/main.chunk.css',
  '/icons/icon-192x192.png',
  '/icons/icon-512x512.png',
];

// API ìºì‹œ ì „ëžµ: Network First (ì˜¨ë¼ì¸) â†’ Cache (ì˜¤í”„ë¼ì¸)
const API_CACHE_NAME = 'lumilang-api-v1';
const API_ROUTES = [
  '/api/vocab',
  '/api/dialogs',
  '/api/topics',
];

// â”€â”€â”€ Install â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
self.addEventListener('install', (event) => {
  console.log('[SW] Installing LUMILang Service Worker...');
  event.waitUntil(
    caches.open(CACHE_NAME).then((cache) => {
      console.log('[SW] Caching core assets');
      return cache.addAll(CORE_ASSETS);
    }).then(() => self.skipWaiting())
  );
});

// â”€â”€â”€ Activate â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
self.addEventListener('activate', (event) => {
  console.log('[SW] Activating...');
  event.waitUntil(
    caches.keys().then((cacheNames) =>
      Promise.all(
        cacheNames
          .filter(name => name !== CACHE_NAME && name !== API_CACHE_NAME)
          .map(name => {
            console.log('[SW] Deleting old cache:', name);
            return caches.delete(name);
          })
      )
    ).then(() => self.clients.claim())
  );
});

// â”€â”€â”€ Fetch Strategy â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
self.addEventListener('fetch', (event) => {
  const { request } = event;
  const url = new URL(request.url);

  // 1) API ìš”ì²­: Network First â†’ Cache Fallback
  if (url.pathname.startsWith('/api/')) {
    event.respondWith(networkFirstStrategy(request));
    return;
  }

  // 2) ì™¸ë¶€ CDN (Google Fonts, Anthropic API): Network Only
  if (!url.origin.includes(self.location.origin)) {
    event.respondWith(fetch(request).catch(() => new Response('', { status: 503 })));
    return;
  }

  // 3) ì•± ì •ì  íŒŒì¼: Cache First â†’ Network Fallback
  event.respondWith(cacheFirstStrategy(request));
});

async function networkFirstStrategy(request) {
  try {
    const networkResponse = await fetch(request);
    if (networkResponse.ok) {
      const cache = await caches.open(API_CACHE_NAME);
      cache.put(request, networkResponse.clone());
    }
    return networkResponse;
  } catch {
    const cached = await caches.match(request);
    return cached || new Response(
      JSON.stringify({ error: 'offline', message: 'ì˜¤í”„ë¼ì¸ ìƒíƒœìž…ë‹ˆë‹¤.' }),
      { status: 503, headers: { 'Content-Type': 'application/json' } }
    );
  }
}

async function cacheFirstStrategy(request) {
  const cached = await caches.match(request);
  if (cached) return cached;

  try {
    const networkResponse = await fetch(request);
    if (networkResponse.ok) {
      const cache = await caches.open(CACHE_NAME);
      cache.put(request, networkResponse.clone());
    }
    return networkResponse;
  } catch {
    // ì˜¤í”„ë¼ì¸ fallback íŽ˜ì´ì§€ ë°˜í™˜
    if (request.mode === 'navigate') {
      return caches.match(OFFLINE_URL);
    }
    return new Response('', { status: 503 });
  }
}

// â”€â”€â”€ Push Notifications (í•™ìŠµ ë¦¬ë§ˆì¸ë”) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
self.addEventListener('push', (event) => {
  const data = event.data?.json() ?? {};
  const options = {
    body: data.body || 'ì˜¤ëŠ˜ í•™ìŠµ ëª©í‘œë¥¼ ë‹¬ì„±í•˜ì„¸ìš”! ðŸŽ¯',
    icon: '/icons/icon-192x192.png',
