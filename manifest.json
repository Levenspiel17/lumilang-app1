  event.waitUntil(
    self.registration.showNotification(data.title || 'ðŸ”¥ LUMILang í•™ìŠµ ì‹œê°„!', options)
  );
});

self.addEventListener('notificationclick', (event) => {
  event.notification.close();
  if (event.action === 'dismiss') return;
  event.waitUntil(
    clients.matchAll({ type: 'window' }).then((clientList) => {
      const url = event.notification.data?.url || '/';
      for (const client of clientList) {
        if (client.url === url && 'focus' in client) return client.focus();
      }
      return clients.openWindow(url);
    })
  );
});

// â”€â”€â”€ Background Sync (ì˜¤í”„ë¼ì¸ í•™ìŠµ ë°ì´í„° ë™ê¸°í™”) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
self.addEventListener('sync', (event) => {
  if (event.tag === 'sync-progress') {
    event.waitUntil(syncLearningProgress());
  }
});

async function syncLearningProgress() {
  try {
    // IndexedDBì— ì €ìž¥ëœ ì˜¤í”„ë¼ì¸ í•™ìŠµ ë°ì´í„° ì„œë²„ë¡œ ì „ì†¡
    const db = await openDB();
    const pendingData = await getPendingSync(db);
    if (pendingData.length === 0) return;

    await fetch('/api/progress/sync', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ records: pendingData }),
    });
    await clearPendingSync(db);
    console.log('[SW] Learning progress synced:', pendingData.length, 'records');
  } catch (err) {
    console.error('[SW] Sync failed:', err);
    throw err; // retry
  }
}

// IndexedDB helpers (ê°„ë‹¨ êµ¬í˜„)
function openDB() {
  return new Promise((resolve, reject) => {
    const req = indexedDB.open('lumilang-offline', 1);
    req.onupgradeneeded = e => e.target.result.createObjectStore('pending', { autoIncrement: true });
    req.onsuccess = e => resolve(e.target.result);
    req.onerror = e => reject(e.target.error);
  });
}
function getPendingSync(db) {
  return new Promise((resolve) => {
    const tx = db.transaction('pending', 'readonly');
    const req = tx.objectStore('pending').getAll();
    req.onsuccess = () => resolve(req.result || []);
  });
}
function clearPendingSync(db) {
  return new Promise((resolve) => {
    const tx = db.transaction('pending', 'readwrite');
    tx.objectStore('pending').clear();
    tx.oncomplete = resolve;
  });
}
